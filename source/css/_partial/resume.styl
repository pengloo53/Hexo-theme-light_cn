.resume{
	margin: 0 auto;
	background-color: #FFF;
	line-height: 1.6;
	width: 800px;
	@media screen and (max-width: 860px){
		width: 100%;
	}
}

.resume-content{
	float: right;
	width: 580px;
	@media screen and (max-width: 860px) {
		width: 100%;
		margin-left: -210px;
	}
	@media screen and (max-width: 500px){
		margin-left: 0;
		float: none;
	}
}

.resume h1, .resume h2, .resume h3{
	font-weight: bold;
      	border-bottom: 1px solid color-border;
      	margin-bottom: 10px;
     	margin-top: 20px;
}

.resume p{
	margin-top: 15px;
}

.resume-entry{
	margin: 30px;
	@media screen and (max-width: 860px) {
		margin-left: 200px;
	}	
	@media screen and (max-width: 500px){
		padding-left: 30px;
		margin-left: 0px;
	}

}

.resume-entry ul,ol li {
	margin-left: 20px;
}

.resume-left{
	float: left;
	width: 150px;
	margin: 30px;
	@media screen and (max-width: 500px){
		float: none;
		margin: 0 auto;
	}	
}

.resume-left img{
	max-width: 100%;
	margin:20px 0;
}

.resume-left .strong{
	font-weight: bold;
	margin-bottom: 10px;
	text-align: center;
}

.resume-left ul li{
	list-style: none;
}

.resume-left span{
	font-style: italic;
}